<properties>
<property name="genTempToken">
<![CDATA[
    insert into temptokens(id,token,createTime,livetime,validate_) values(?,?,?,?,?)
 ]]>
</property>
<property name="getTempToken">
<![CDATA[
    select * from temptokens where token=?
 ]]> 
</property>
<property name="deleteTempToken">
<![CDATA[
    delete from temptokens where token=?
 ]]> 
</property>

<property name="updateDualToken">
<![CDATA[
    update  dualtokens set token=#[token],createTime=#[createTime],lastVistTime=#[lastVistTime],livetime=#[livetime],validate_=#[validate] where appid=#[appid] and secret=#[secret]
 ]]>
</property>
<property name="updateDualTokenLastVistime">
<![CDATA[
    update  dualtokens set lastVistTime=? where appid=? and secret=?
 ]]>
</property>
<property name="queryDualToken">
<![CDATA[
    select * from  dualtokens  where appid=? and secret=?
 ]]>
</property>

<property name="insertDualToken">
<![CDATA[

    insert into dualtokens(id,token,createTime,lastVistTime,livetime,appid,secret,validate_) values(#[id],#[token],#[createTime],#[lastVistTime],#[livetime],#[appid],#[secret],#[validate])
 ]]>
</property>
<property name="genAuthTempToken">
